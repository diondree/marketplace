{
  "name": "marketplace-frontend",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev ",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only --project src/pages/api/graphql/tsconfig.json src/pages/api/graphql",
    "database": "docker-compose up -d",
    "seed": "ts-node --transpile-only --project src/pages/api/graphql/tsconfig.json prisma/seed"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@apollo/react-ssr": "^3.1.5",
    "@nexus/schema": "^0.13.1",
    "@prisma/client": "^2.0.0-beta.3",
    "@zeit/next-css": "^1.0.1",
    "apollo-boost": "^0.4.7",
    "apollo-errors": "^1.9.0",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-server-micro": "^2.12.0",
    "apollo-upload-client": "^13.0.0",
    "bcrypt": "^4.0.1",
    "cloudinary": "^1.21.0",
    "cloudinary-core": "^2.8.2",
    "cloudinary-react": "^1.5.0",
    "express": "^4.17.1",
    "graphql-hooks": "^4.4.4",
    "graphql-hooks-ssr": "^1.1.5",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.2.6",
    "graphql-tag": "^2.10.3",
    "isomorphic-unfetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "micro-cors": "^0.1.1",
    "next": "^9.3.5",
    "next-cookies": "^2.0.3",
    "nexus-prisma": "^0.12.0",
    "react": "^16.13.1",
    "react-apollo": "^3.1.5",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.1",
    "uuid": "^7.0.3",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/typescript": "^1.13.3",
    "@graphql-codegen/typescript-operations": "^1.13.3",
    "@graphql-codegen/typescript-react-apollo": "^1.13.3",
    "@prisma/cli": "^2.0.0-beta.3",
    "@types/apollo-upload-client": "^8.1.3",
    "@types/bcrypt": "^3.0.0",
    "@types/graphql": "^14.5.0",
    "@types/node": "^13.13.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "tailwindcss": "^1.3.4",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "npm run lint:fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
